{
  "name": "project-one",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/project-one/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/project-one",
        "browser": "apps/project-one/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/project-one/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/project-one/public"
          }
        ],
        "styles": ["apps/project-one/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "optimization": {
            "scripts": true,
            "styles": { "minify": true, "inlineCritical": false },
            "fonts": true
          },
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2MB",
              "maximumError": "4MB"
            }
          ],
          "outputHashing": "all"
        },
        "staging": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/project-one/src/environments/environment.ts",
              "with": "apps/project-one/src/environments/environment.staging.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/project-one/src/environments/environment.ts",
              "with": "apps/project-one/src/environments/environment.development.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "proxyConfig": "apps/project-one/proxy.config.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "project-one:build:production"
        },
        "staging": {
          "buildTarget": "project-one:build:staging"
        },
        "development": {
          "buildTarget": "project-one:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "project-one:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/project-one/jest.config.ts",
        "tsConfig": "apps/project-one/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "project-one:build",
        "staticFilePath": "dist/apps/project-one/browser",
        "spa": true
      }
    }
  }
}
